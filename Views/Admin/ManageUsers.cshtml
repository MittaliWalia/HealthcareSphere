@model IEnumerable<HealthSphere_CapstoneProject.Models.Login>
@{
    ViewData["Title"] = "Filter Users";
}

@section Styles {
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h4 fw-bold"><i class="bi bi-funnel-fill me-2"></i>Filter Users</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <a asp-action="ExportUsersCsv" class="btn btn-outline-secondary">
                <i class="bi bi-download me-1"></i>Export CSV
            </a>
            <i class="bi bi-arrow-left-circle me-1"></i>Back to Users
        </a>
    </div>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-5">
            <input type="text" name="search" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Search by email or username" />
        </div>
        <div class="col-md-4">
            <select name="role" class="form-select">
                <option value="">All Roles</option>
                @foreach (var r in (string[])ViewBag.AllRoles)
                {
                    <option value="@r" selected="@(r == (string)ViewBag.CurrentRole ? "selected" : null)">@r</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search me-1"></i>Apply Filter
            </button>
        </div>
        <div class="col-auto">
            <a asp-action="ManageUsers" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle me-1"></i>Clear
            </a>
        </div>
    </form>

    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Username</th>
                    <th scope="col">Role</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.Username</td>
                        <td class="text-capitalize">@user.Role</td>
                        <td class="text-center">
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i>Back
        </a>
    </div>
</div>

@section Scripts {
   
}
