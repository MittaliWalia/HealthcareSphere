@model IEnumerable<HealthSphere_CapstoneProject.Models.Bill>
@{
    ViewData["Title"] = "Billing Management";
}


@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 m-0">Billing Management</h1>
        <a asp-controller="Admin" asp-action="CreateBill" class="btn btn-primary">
            <i class="bi bi-file-earmark-plus"></i> Generate New Bill
        </a>
    </div>

    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="btn-group">
            <a asp-action="ExportBillsToPDF" class="btn btn-outline-secondary">
                <i class="bi bi-file-earmark-pdf-fill me-1"></i>Export to PDF
            </a>
            <a asp-action="ExportBillsToExcel" class="btn btn-outline-secondary">
                <i class="bi bi-file-earmark-excel-fill me-1"></i>Export to Excel
            </a>
        </div>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    
                    <th>Patient</th>
                    <th>Appointment Date</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Insurance</th>
                    <th>Issued On</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in Model)
                {
                    <tr>
                        
                        <td>@bill.PatientName</td>
                        <td>@bill.AppointmentDate</td>
                        <td>@bill.Amount.ToString("C")</td>
                        <td>
                            @{
                                var statusClass =
                                string.Equals(bill.Status, "Paid", StringComparison.OrdinalIgnoreCase) ? "bg-success" :
                                bill.Status?.StartsWith("Pending", StringComparison.OrdinalIgnoreCase) == true ? "bg-warning" :
                                "bg-secondary";
                            }
                            <span class="badge @statusClass">@bill.Status</span>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(bill.InsuranceProvider))
                            {
                                @bill.InsuranceProvider
                                <br />
                                <small class="text-muted">@bill.InsuranceNumber</small>
                            }
                        </td>
                        <td>@bill.DateIssued</td>
                        <td class="text-center">
                            @if (!string.Equals((string)bill.Status, "Paid", StringComparison.OrdinalIgnoreCase))
                            {
                                <form  asp-action="MarkAsPaid" method="post" class="d-inline">
                                    <input type="hidden" name="billId" value="@bill.Id" />
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="bi bi-check-circle me-1"></i>Mark Paid
                                    </button>
                                </form>
                            }

                            <a asp-action="EditBill" asp-route-id="@bill.Id"
                               class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                <i class="bi bi-pencil-fill"></i>
                            </a>

                            
                            <a asp-action="DeleteBill" asp-route-id="@bill.Id"
                               class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Delete this bill?');"
                               title="Delete">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
