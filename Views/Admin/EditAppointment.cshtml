@model HealthSphere_CapstoneProject.Models.Appointment
@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="container py-4">
  
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">✏️ Edit Appointment</h1>
        </div>
    </div>

  
    <form asp-action="EditAppointment" method="post" class="row g-3 shadow-sm p-4 bg-white rounded">
        <input asp-for="Id" type="hidden" />

        <div class="col-md-6">
            <label asp-for="PatientId" class="form-label">Patient</label>
            @Html.DropDownListFor(
                     m => m.PatientId,
                     (IEnumerable<SelectListItem>)ViewBag.Patients,
                     htmlAttributes: new { @class = "form-select" }
                     )
            <span asp-validation-for="PatientId" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DoctorId" class="form-label">Doctor</label>
            @Html.DropDownListFor(
                     m => m.DoctorId,
                     (IEnumerable<SelectListItem>)ViewBag.Doctors,
                     htmlAttributes: new { @class = "form-select" }
                     )
            <span asp-validation-for="DoctorId" class="text-danger small"></span>
        </div>


        <div class="col-md-4">
            <label asp-for="AppointmentDate" class="form-label">Date</label>
            <input asp-for="AppointmentDate" type="date" class="form-control" />
            <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="AppointmentTime" class="form-label">Time</label>
            <input asp-for="AppointmentTime" type="time" class="form-control" />
            <span asp-validation-for="AppointmentTime" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-select">
                <option value="Pending">Pending</option>
                <option value="Completed">Completed</option>
                <option value="Cancelled">Cancelled</option>
            </select>
            <span asp-validation-for="Status" class="text-danger small"></span>
        </div>

        <div class="col-12">
            <label asp-for="Notes" class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any notes..."></textarea>
            <span asp-validation-for="Notes" class="text-danger small"></span>
        </div>

        <div class="col-12 text-end">
            <a asp-action="Appointments" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

@section Styles {
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
