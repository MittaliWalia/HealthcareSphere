@model IEnumerable<HealthSphere_CapstoneProject.Models.Login>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="display-5 mb-1">Admin Dashboard</h1>
            <p class="text-muted">Quick links and user management</p>
        </div>
        <div>
            <a asp-controller="Home" asp-action="Logout" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>
    </div>
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h4 fw-bold"><i class="bi bi-people-fill me-2"></i>User Management</h1>
       
        <div>
            <a asp-action="ChangePassword" class="btn btn-warning me-2">
                <i class="bi bi-key-fill me-1"></i>Change Password
            </a>
            <a asp-action="ManageUsers" class="btn btn-outline-primary me-2">
                <i class="bi bi-filter-circle me-1"></i>Filter Users
            </a>
            <a asp-action="ExportUsersCsv" class="btn btn-outline-secondary">
                <i class="bi bi-download me-1"></i>Export CSV
            </a>
        </div>
    </div>
    
    <div class="row gx-4 gy-3">
        <div class="col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check-fill fs-1 text-primary mb-2"></i>
                    <h5 class="card-title">Manage Appointments</h5>
                    <a asp-controller="Admin" asp-action="Appointments" class="stretched-link"></a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-receipt-cutoff fs-1 text-success mb-2"></i>
                    <h5 class="card-title">Billing</h5>
                    <a asp-controller="Admin" asp-action="Billing" class="stretched-link"></a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up-arrow fs-1 text-warning mb-2"></i>
                    <h5 class="card-title">Reports &amp; Analytics</h5>
                    <a asp-controller="Admin" asp-action="Dashboard" class="stretched-link"></a>
                </div>
            </div>
        </div>
    </div>
   
    <div>
        <h2 class="h4 mb-3">Manage Users</h2>
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Email</th>
                        <th scope="col">Username</th>
                        <th scope="col">Role</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Email</td>
                            <td>@user.Username</td>
                            <td>@user.Role</td>
                            <td class="text-center">
                                <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this user?');">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
          rel="stylesheet" />
}


