@{
    ViewData["Title"] = "Doctor Dashboard";
    var todayAppointments = ViewBag.TodayAppointments ?? 0;
    var totalPatients = ViewBag.TotalPatients ?? 0;
    var labCount = ViewBag.LabCount ?? 0;
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<h2 class="mb-4"><i class="bi bi-person-workspace me-2"></i>Doctor Dashboard</h2>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card border-primary shadow">
            <div class="card-body text-center">
                <i class="bi bi-calendar-check display-4 text-primary"></i>
                <h5 class="card-title mt-2">Today's Appointments</h5>
                <p class="display-6 fw-bold">@todayAppointments</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-success shadow">
            <div class="card-body text-center">
                <i class="bi bi-people-fill display-4 text-success"></i>
                <h5 class="card-title mt-2">Total Patients</h5>
                <p class="display-6 fw-bold">@totalPatients</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-warning h-100">
            <div class="card-body text-center">
                <h5 class="card-title">Lab Requests</h5>
                <p class="display-6 fw-bold text-warning">@ViewBag.LabCount</p>
                
            </div>
        </div>
    </div>

</div>

<div class="row g-4">
    <div class="col-md-3">
        <a asp-action="Schedule" class="btn btn-outline-primary w-100">
            <i class="bi bi-calendar-event me-2"></i> View Schedule
        </a>
    </div>
    <div>
    <a asp-action="LabAndDiagnostics" class="btn btn-outline-dark">
    <i class="bi bi-clipboard2-pulse me-1"></i>Lab & Diagnostics
</a>
    </div>
    <div class="col-md-3">
        <a asp-action="ChangePassword" class="btn btn-outline-secondary w-100">
            <i class="bi bi-key me-2"></i> Change Password
        </a>
    </div>
    
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible mt-4">
        <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
