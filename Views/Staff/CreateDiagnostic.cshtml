@model HealthSphere_CapstoneProject.Models.ClinicalNote
@{
    ViewData["Title"] = "Add Diagnostic";
    var appointments = ViewBag.Appointments as List<dynamic>;
}

<h2 class="mb-4"><i class="bi bi-journal-medical me-1"></i> Add Diagnostic</h2>

<form asp-action="CreateDiagnostic" method="post" class="shadow-sm p-4 rounded bg-light">
    <div class="mb-3">
        <label class="form-label">Select Appointment / Patient</label>
        <select class="form-select" asp-for="AppointmentId" required>
            <option value="">-- Select --</option>
            @foreach (var appt in appointments)
            {
                <option value="@appt.Id">@appt.Display</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Clinical Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Enter clinical notes"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="TreatmentPlan" class="form-label">Treatment Plan</label>
        <textarea asp-for="TreatmentPlan" class="form-control" rows="3" placeholder="Describe the treatment plan"></textarea>
    </div>

    <div class="form-check mb-3">
        <input asp-for="LabTestRequested" class="form-check-input" type="checkbox" />
        <label asp-for="LabTestRequested" class="form-check-label">Request Lab Test</label>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-save me-1"></i> Save Diagnostic
    </button>

    <a asp-action="LabAndDiagnostics" class="btn btn-secondary ms-2">
        <i class="bi bi-x-circle me-1"></i> Cancel
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
