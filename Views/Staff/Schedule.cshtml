@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "My Schedule";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="table-responsive shadow-sm">
    <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-dark">
            <tr>
                <th>Patient Name</th>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
                <th>Notes</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in Model)
            {
                <tr>
                    <td>@appt.PatientName</td>
                    <td>@appt.AppointmentDate:yyyy-MM-dd</td>
                    <td>@appt.AppointmentTime:hh\\:mm</td>
                    <td class="text-capitalize">@appt.Status</td>
                    <td>@appt.Notes</td>
                    <td class="text-center">
                        @if (!appt.Status.Equals("Completed", StringComparison.OrdinalIgnoreCase))
                        {
                            <form asp-action="MarkComplete" method="post" class="d-inline">
                                <input type="hidden" name="appointmentId" value="@appt.Id" />
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="bi bi-check-circle me-1"></i>Complete
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-lg me-1"></i>Completed
                            </span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    
    <partial name="_ValidationScriptsPartial" />
}
