@{
    ViewData["Title"] = "Lab & Diagnostics";
    var labRequests = ViewBag.LabRequests as List<dynamic>;
    var diagnostics = ViewBag.Diagnostics as List<dynamic>;
}

<h2 class="mb-4">Lab Requests & Diagnostics</h2>

<ul class="nav nav-tabs" id="labDiagTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="lab-tab" data-bs-toggle="tab" data-bs-target="#lab" type="button" role="tab">
            Lab Requests
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="diag-tab" data-bs-toggle="tab" data-bs-target="#diag" type="button" role="tab">
            Diagnostics
        </button>
    </li>
</ul>

<div class="tab-content pt-3" id="labDiagTabsContent">

   
    <div class="tab-pane fade show active" id="lab" role="tabpanel" aria-labelledby="lab-tab">
        @if (labRequests == null || !labRequests.Any())
        {
            <div class="alert alert-info">No lab requests found.</div>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Appointment ID</th>
                        <th>Patient</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in labRequests)
                    {
                        <tr>
                            <td>@item.AppointmentId</td>
                            <td>@item.PatientName</td>
                            <td>@item.Notes</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

 
    <div class="tab-pane fade" id="diag" role="tabpanel" aria-labelledby="diag-tab">
        @if (diagnostics == null || !diagnostics.Any())
        {
            <div class="alert alert-info">No diagnostics available.</div>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Appointment ID</th>
                        <th>Patient</th>
                        <th>Notes</th>
                        <th>Treatment Plan</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in diagnostics)
                    {
                        <tr>
                            <td>@d.AppointmentId</td>
                            <td>@d.PatientName</td>
                            <td>@d.Notes</td>
                            <td>@d.TreatmentPlan</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" asp-action="EditDiagnostic" asp-route-appointmentId="@d.AppointmentId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        }

        <a asp-action="CreateDiagnostic" class="btn btn-success mt-3">
            <i class="bi bi-plus-circle"></i> Create New Diagnostic
        </a>
    </div>
</div>
