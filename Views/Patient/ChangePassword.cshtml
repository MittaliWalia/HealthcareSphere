@model HealthSphere_CapstoneProject.Models.Login
@{
    ViewData["Title"] = "Change Password";
}

@section Styles {
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-key-fill me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="bi bi-lock me-1"></i>Current Password
                            </label>
                            <input asp-for="CurrentPassword" type="password" class="form-control" required />
                            <span asp-validation-for="CurrentPassword" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock-fill me-1"></i>New Password
                            </label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <span asp-validation-for="Password" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-lock-fill me-1"></i>Confirm New Password
                            </label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                            <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i>Change Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
