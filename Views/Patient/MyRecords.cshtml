@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "My Medical Records";
    var recs = ViewBag.Records as List<dynamic>;
}

@section Styles {
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container py-4">
    
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h4 fw-bold"><i class="bi bi-journal-medical me-2"></i>Medical Records</h1>
        <div>
            <a asp-action="DownloadRecordsCsv" class="btn btn-outline-primary me-2">
                <i class="bi bi-file-earmark-arrow-down me-1"></i>Download CSV
            </a>
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i>Back
            </a>
        </div>
    </div>

    @if (recs == null || !recs.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-1"></i>No medical records available.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Diagnosis</th>
                        <th scope="col">Prescription</th>
                        <th scope="col">Vitals</th>
                        <th scope="col">Doctor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in recs)
                    {
                        <tr>
                            <td>@String.Format("{0:yyyy-MM-dd}", r.DateCreated)</td>
                            <td>@r.Diagnosis</td>
                            <td>@r.Prescription</td>
                            <td>@r.Vitals</td>
                            <td>@r.DoctorName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
   
}
