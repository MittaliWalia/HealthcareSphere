@model IEnumerable<HealthSphere_CapstoneProject.Models.Appointment>
@{
    ViewData["Title"] = "Appointment Management";
}

<div class="container py-4">

   
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 m-0">Appointment Management</h1>
        <a asp-controller="Admin" asp-action="CreateAppointment" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Appointment
        </a>
    </div>
    
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h4 fw-bold"><i class="bi bi-people-fill me-2"></i>User Management</h1>

        <div>
           
            <a asp-action="AppointmentsPdf" class="btn btn-outline-secondary">
                <i class="bi bi-download me-1"></i>Export Pdf
            </a>
        </div>
    </div>
    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    
                    <th>Patient</th>
                    <th>Doctor</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Notes</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in Model)
                {
                    <tr>
                        
                        <td>@appt.PatientName</td>
                        <td>@appt.DoctorName</td>
                        <td>@appt.AppointmentDate</td>
                        <td>@appt.AppointmentTime</td>
                        <td>
                            <span class="badge @(appt.Status == "Completed" ? "bg-success" : "bg-warning")">
                                @appt.Status
                            </span>
                        </td>
                        <td>@appt.Notes</td>
                        <td class="text-center">
                            <a asp-action="EditAppointment"
                               asp-route-id="@appt.Id"
                               class="btn btn-sm btn-outline-warning me-1"
                               title="Edit">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-action="DeleteAppointment"
                               asp-route-id="@appt.Id"
                               class="btn btn-sm btn-outline-danger"
                               title="Delete"
                               onclick="return confirm('Are you sure you want to delete this appointment?');">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
          rel="stylesheet" />
}
