<h2>Manage Users</h2>

<table class="table table-bordered mt-3">
    <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Username</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>
            <td>@user.Username</td>
            <td>@user.Role</td>
            <td>
                <a href="/Admin/EditUser/@user.Id" class="btn btn-warning">Edit</a>
                <a href="/Admin/DeleteUser/@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
            </td>
        </tr>
    }
</table>
