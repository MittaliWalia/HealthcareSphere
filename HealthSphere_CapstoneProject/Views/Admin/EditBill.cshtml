@model HealthSphere_CapstoneProject.Models.Bill
@{
    ViewData["Title"] = "Edit Bill";
}

@section Styles {
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container py-4">
 
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3"><i class="bi bi-pencil-square me-2"></i>Edit Bill</h1>
        </div>
    </div>

  
    <form asp-action="EditBill" method="post" class="row g-3 shadow-sm p-4 bg-white rounded">
        <input asp-for="Id" type="hidden" />

        <div class="col-md-6">
            <label asp-for="AppointmentId" class="form-label">Appointment</label>
            @Html.DropDownListFor(
                     m => m.AppointmentId,
                     (IEnumerable<SelectListItem>)ViewBag.CompletedAppointments,
                     htmlAttributes: new { @class = "form-select", required = "required" }
                     )
            <span asp-validation-for="AppointmentId" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="PatientId" class="form-label">Patient</label>
            @Html.DropDownListFor(
                     m => m.PatientId,
                     (IEnumerable<SelectListItem>)ViewBag.Patients,
                     htmlAttributes: new { @class = "form-select", required = "required" }
                     )
            <span asp-validation-for="PatientId" class="text-danger small"></span>
        </div>



        <div class="col-md-4">
            <label asp-for="Amount" class="form-label">Amount ($)</label>
            <input asp-for="Amount" type="number" step="0.01" class="form-control"  />
            <span asp-validation-for="Amount" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-select">
                <option value="Unpaid">Unpaid</option>
                <option value="Paid">Paid</option>
                <option value="Pending Insurance">Pending Insurance</option>
            </select>
            <span asp-validation-for="Status" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="InsuranceProvider" class="form-label">Insurance Provider</label>
            <input asp-for="InsuranceProvider" type="text" class="form-control" />
            <span asp-validation-for="InsuranceProvider" class="text-danger small"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="InsuranceNumber" class="form-label">Insurance Number</label>
            <input asp-for="InsuranceNumber" type="text" class="form-control" />
            <span asp-validation-for="InsuranceNumber" class="text-danger small"></span>
        </div>

        <div class="col-12">
            <label asp-for="Notes" class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any notes..."></textarea>
            <span asp-validation-for="Notes" class="text-danger small"></span>
        </div>

        <div class="col-12 text-end">
            <a asp-action="Billing" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
