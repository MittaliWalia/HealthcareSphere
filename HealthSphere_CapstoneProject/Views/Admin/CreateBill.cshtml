<h2>Create New Bill</h2>

<form method="post">
    <div>
        <label>Completed Appointment:</label>
        <select name="AppointmentId" class="form-control" required onchange="fillPatientId(this)">
            <option value="">-- Select Appointment --</option>
            @foreach (var a in ViewBag.CompletedAppointments)
            {
                <option value="@a.Id" data-patient="@a.PatientName">@a.Id - @a.PatientName (@a.AppointmentDate.ToShortDateString())</option>
            }
        </select>
    </div>

    <div>
        <label>Patient ID:</label>
        <input type="number" name="PatientId" required class="form-control" />
    </div>

    <div>
        <label>Amount:</label>
        <input type="number" name="Amount" step="0.01" required class="form-control" />
    </div>

    <div>
        <label>Status:</label>
        <select name="Status" class="form-control">
            <option value="Unpaid">Unpaid</option>
            <option value="Paid">Paid</option>
            <option value="Pending Insurance">Pending Insurance</option>
        </select>
    </div>

    <div>
        <label>Insurance Provider:</label>
        <input type="text" name="InsuranceProvider" class="form-control" />
    </div>

    <div>
        <label>Insurance Number:</label>
        <input type="text" name="InsuranceNumber" class="form-control" />
    </div>

    <div>
        <label>Notes:</label>
        <textarea name="Notes" class="form-control"></textarea>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Create Bill</button>
</form>

