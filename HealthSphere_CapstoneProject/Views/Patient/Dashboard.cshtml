@model dynamic
@using System
@using System.Collections.Generic
@{
    ViewData["Title"] = "Dashboard";
    var patient = ViewBag.Patient;
    var appointments = ViewBag.Appointments as IEnumerable<dynamic>;
}

@section Styles {
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="container py-4">
   
    <div class="d-flex align-items-center mb-4">
        <h1 class="display-5 fw-bold"><i class="bi bi-person-circle me-2"></i>Welcome, @patient.Username</h1>
    </div>

    <div class="row g-4">
        
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-badge me-1"></i>Your Profile</h5>
                    <dl class="row mt-3">
                        <dt class="col-sm-4 text-muted">Username</dt>
                        <dd class="col-sm-8">@patient.Username</dd>

                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@patient.Email</dd>

                        <dt class="col-sm-4 text-muted">Role</dt>
                        <dd class="col-sm-8 text-capitalize">@patient.Role</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-tools me-1"></i>Actions</h5>
                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="BookAppointment" class="btn btn-primary">
                            <i class="bi bi-calendar-plus me-1"></i>Book Appointment
                        </a>
                        <a asp-action="Bills" class="btn btn-secondary">
                            <i class="bi bi-receipt me-1"></i>View Bills
                        </a>
                        <a asp-action="MyRecords" class="btn btn-info text-white">
                            <i class="bi bi-journal-medical me-1"></i>View Medical Records
                        </a>
                        <a asp-action="DownloadRecordsCsv" class="btn btn-outline-info">
                            <i class="bi bi-download me-1"></i>Download Records (CSV)
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-warning text-white">
                            <i class="bi bi-key-fill me-1"></i>Change Password
                        </a>
                        <a asp-action="Logout" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right me-1"></i>Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

  
    <div class="mt-5">
        <h4 class="mb-3"><i class="bi bi-calendar-check-fill me-1"></i>Upcoming Appointments</h4>
        <div class="card shadow-sm">
            <div class="card-body p-0">
                @if (appointments != null && appointments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Doctor</th>
                                    <th>Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appt in appointments)
                                {
                                    <tr>
                                        <td>@appt.Date</td>
                                        <td>@appt.Time</td>
                                        <td>@appt.Doctor</td>
                                        <td class="text-capitalize">@appt.Status</td>
                                        <td class="text-center">
                                            @if (appt.Status.Equals("Scheduled", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <form asp-action="CancelAppointment" method="post" class="d-inline">
                                                    <input type="hidden" name="appointmentId" value="@appt.Id" />
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-calendar-x fs-1 mb-2"></i>
                        <p class="mb-0">You have no upcoming appointments.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
   
}
