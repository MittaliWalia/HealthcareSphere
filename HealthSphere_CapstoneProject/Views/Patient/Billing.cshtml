@{
    ViewData["Title"] = "My Bills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">My Billing History</h2>

@if (((List<dynamic>)ViewBag.Bills).Count == 0)
{
    <div class="alert alert-info">You have no bills at this time.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Date Issued</th>
                <th>Appointment Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Insurance</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in ViewBag.Bills)
            {
                <tr>
                    <a class="btn btn-sm btn-outline-secondary" href="/Patient/DownloadInvoice?billId=@bill.Id" target="_blank">
                        🧾 Download PDF
                    </a>
                    <td>@bill.DateIssued.ToString("yyyy-MM-dd")</td>
                    <td>@bill.AppointmentDate.ToString("yyyy-MM-dd")</td>
                    <td>$@bill.Amount.ToString("F2")</td>
                    <td>
                        @if (bill.Status == "Paid")
                        {
                            <span class="text-success">Paid</span>
                        }
                        else
                        {
                            <span class="text-danger">Unpaid</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(bill.InsuranceProvider))
                        {
                            <span>@bill.InsuranceProvider (@bill.InsuranceNumber)</span>
                        }
                        else
                        {
                            <span class="text-muted">Not Provided</span>
                        }
                    </td>
                    <td>
                        @if (bill.Status == "Unpaid")
                        {
                            <form asp-action="MarkAsPaid" method="post">
                                <input type="hidden" name="billId" value="@bill.Id" />
                                <button class="btn btn-sm btn-outline-success">Mark as Paid</button>
                            </form>
                        }
                        else
                        {
                            <span>✔</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(bill.InsuranceProvider))
                        {
                            <span>@bill.InsuranceProvider (@bill.InsuranceNumber)</span>
                        }
                        else
                        {
                            <button type="button" class="btn btn-sm btn-outline-primary"
                                    data-bs-toggle="modal" data-bs-target="#insuranceModal"
                                    onclick="setBillId(@bill.Id)">
                                Upload Insurance
                            </button>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>


}

<!-- Insurance Upload Modal -->
<div class="modal fade" id="insuranceModal" tabindex="-1" aria-labelledby="insuranceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="UpdateInsurance" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="insuranceModalLabel">Update Insurance</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="BillId" name="BillId" />

                    <div class="mb-3">
                        <label for="InsuranceProvider" class="form-label">Insurance Provider</label>
                        <input type="text" class="form-control" name="InsuranceProvider" required />
                    </div>
                    <div class="mb-3">
                        <label for="InsuranceNumber" class="form-label">Insurance Number</label>
                        <input type="text" class="form-control" name="InsuranceNumber" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Insurance</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function setBillId(id) {
        document.getElementById('BillId').value = id;
    }
</script>