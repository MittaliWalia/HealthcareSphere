@model dynamic
@{
    ViewData["Title"] = "Diagnostics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Diagnostics for Appointment #@Model.AppointmentId</h2>

<div class="mb-3">
    <strong>Patient:</strong> @Model.PatientName <br />
    <strong>Date:</strong> @Model.AppointmentDate.ToString("yyyy-MM-dd") <br />
    <strong>Time:</strong> @Model.AppointmentTime.ToString(@"hh\:mm") <br />
    <strong>Status:</strong> @Model.Status
</div>

<hr />

<form asp-action="SaveDiagnostics" method="post">
    <input type="hidden" name="AppointmentId" value="@Model.AppointmentId" />
    <input type="hidden" name="DoctorId" value="@Model.DoctorId" />

    <div class="mb-3">
        <label>Clinical Notes</label>
        <textarea name="Notes" class="form-control" rows="3" required></textarea>
    </div>

    <div class="mb-3">
        <label>Treatment Plan</label>
        <textarea name="TreatmentPlan" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" name="LabTestRequested" value="true" class="form-check-input" id="labTest">
        <label class="form-check-label" for="labTest">Request Lab Tests</label>
    </div>

    <button type="submit" class="btn btn-primary">Save Diagnostics</button>
</form>
