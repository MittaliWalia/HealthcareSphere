@{
    ViewData["Title"] = "My Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">My Schedule</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Patient Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th>Notes</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in ViewBag.Appointments)
        {
            <tr>
                <td>@appointment.PatientName</td>
                <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                <td>@appointment.Status</td>
                <td>@appointment.Notes</td>
                <td>
                    @if (appointment.Status != "Completed")
                    {
                        <form asp-action="MarkComplete" method="post">
                            <input type="hidden" name="appointmentId" value="@appointment.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Mark as Complete</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">✔ Completed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
