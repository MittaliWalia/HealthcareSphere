@{
    ViewData["Title"] = "Pending Lab Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Pending Lab Test Requests</h2>

@if (ViewBag.LabTests == null || ((List<dynamic>)ViewBag.LabTests).Count == 0)
{
    <div class="alert alert-info">No pending lab test requests.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Appointment ID</th>
                <th>Patient Name</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var test in ViewBag.LabTests)
            {
                <tr>
                    <td>@test.AppointmentId</td>
                    <td>@test.PatientName</td>
                    <td>@test.Notes</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="/Staff/Diagnostics?appointmentId=@test.AppointmentId">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
